        <import addon="script.module.requests" version="2.27.1" />
        <import addon="script.module.dateutil" version="2.8.2" />
        <import addon="script.module.pillow" version="9.0.0" />
        <import addon="script.module.beautifulsoup4" version="4.10.0" />
